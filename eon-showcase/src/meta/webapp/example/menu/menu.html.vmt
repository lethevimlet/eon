<eon-anchor state="menu" eon-scroll=".menusPanel eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>MENU</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-menu" load="initializeShowcase('.d-menu-tmp', '.d-menu-pg');">
    <div name="example">
      <eon-showcase-item title="Menu">
        <eon-menu class="d-menu">
          <eon-item name="Home" label="Home" onclick="alert('test')"></eon-item>
          <eon-item name="Contact" label="Contact">
            <eon-item name="Email" label="Email"></eon-item>
            <eon-item name="Phone" label="Phone">
              <eon-item name="Personal" label="Personal"></eon-item>
              <eon-item name="Business" label="Business"></eon-item>
            </eon-item>
          </eon-item>
          <eon-item name="About" label="About" href="https://www.google.com/"></eon-item>
        </eon-menu>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-menu-pg"></eon-showcase>
    </div>
  </eon-viewer>

  <!-- Showcase content -->
  <template class="d-menu-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <style>
        eon-showcase-item {
          width: 100%;
          height: 300px;
        }
      </style>
      <!-- Import eon-js  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.parent.location.href + "eon";
        // Inject js with meta
        //<% template("../../util/eon-bundle.js");%>
        eon.theme = "claro";
        // UI components
        eon.import([
          "eon/ui/eon-menu",
          "eon/custom/eon-showcase-item"
        ]);
      </script>
    </div>
    <!-- EXAMPLES BODY -->
    <div class="template-body">
      <eon-showcase-item title="Menu">
        <eon-menu class="d-menu">
          <eon-item name="Home" label="Home" onclick="alert('test')"></eon-item>
          <eon-item name="Contact" label="Contact">
            <eon-item name="Email" label="Email"></eon-item>
            <eon-item name="Phone" label="Phone">
              <eon-item name="Personal" label="Personal"></eon-item>
              <eon-item name="Business" label="Business"></eon-item>
            </eon-item>
          </eon-item>
          <eon-item name="About" label="About" href="https://www.google.com/"></eon-item>
        </eon-menu>
      </eon-showcase-item>
    </div>
    <!-- END EXAMPLES BODY -->
    <script class="template-js">
      //** Showcase resize fix
      eon.onReady(function () {
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
        document.body.setAttribute("theme", "claro");
      });
      //**
    </script>
    <style class="template-style">
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }

      .d-menu {
        height: 50px;
        width: 100%;
      }

      .d-menu eon-item {
        font-weight: bold;
      }

      .d-menu-placeholder {
        height: 200px;
        width: 100%;
      }

      .d-menu-example-container {
        flex-direction: column;
      }

      .d-right-margin {
        margin-right: 10px;
      }

      .d-left-margin {
        margin-left: 10px;
      }

      .d-top-margin {
        margin-top: 10px;
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>