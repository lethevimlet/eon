<eon-anchor state="separator" eon-scroll="eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>SEPATARATOR</h1>

  <!-- SHOWCASE -->
  <!-- Showcase declaration -->
  <eon-showcase class="d-pg d-separator-pg"></eon-showcase>

  <script>
    initializeShowcase(".d-separator-tmp", ".d-separator-pg");
  </script>

  <!-- Showcase content -->
  <template class="d-separator-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- Import eon-js  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.location.href + "eon";
        // Inject js with meta
        /*<% template("../other/eon-bundle.js"); %>*/
        eon.theme = "claro";
        // UI components
        eon.import([
          "eon/ui/eon-separator",
          "eon/ui/eon-showcase-item"
        ]);
      </script>
    </div>
    <!-- EXAMPLES BODY -->
    <div class="template-body">
      <eon-showcase-item title="Horizontal separator">
        <div class="d-separator-form">
          <div class="d-separator-content">
            Full bleed separator
            <eon-separator></eon-separator>
          </div>
          <div class="d-separator-content">
            Mid position separator
            <eon-separator type="mid" border="3" length="50%"></eon-separator>
          </div>
          <div class="d-separator-content">
            Start position separator
            <eon-separator type="start" border="1" length="200"></eon-separator>
          </div>
          <div class="d-separator-content">
            End position separator
            <eon-separator type="end" border="3" length="70%"></eon-separator>
          </div>
          <div class="d-separator-content">
            No separator
          </div>
        </div>
      </eon-showcase-item>
    </div>
    <!-- END EXAMPLES BODY -->
    <script class="template-js">
      //** Showcase resize fix
      eon.onReady(function () {
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
      });
      //**
    </script>

    <style class="template-style">
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }

      /* Separator style */
      .d-separator-form {
        height: 350px;
        width: 500px;
        background-color: transparent;
        font-size: 13px;
        font-weight: bolder;
        display: flex;
        flex-direction: column;
        margin-bottom: 20px;
      }

      .d-separator-form-hor {
        flex-direction: row;
      }

      .d-separator-content {
        height: 100px;
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
      }

      .d-separator-content-hor {
        height: 100%;
        word-wrap: break-word;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      @media (max-width: 580px) {
        .d-separator-text {
          text-overflow: ellipsis;
          white-space: nowrap;
          width: 24px;
          overflow: hidden;
        }
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>