<eon-anchor state="headerpanel" eon-scroll="eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>HEADERPANEL</h1>

  <!-- SHOWCASE -->
  <!-- Showcase declaration -->
  <eon-showcase class="d-pg d-headerpanel-pg"></eon-showcase>

  <script>
    initializeShowcase(".d-headerpanel-tmp", ".d-headerpanel-pg");
  </script>

  <!-- Showcase content -->
  <template class="d-headerpanel-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <style>
        @media (max-width: 430px) {
          .d-headerpanel {
            width: 100%;
          }
        }
      </style>
      <!-- Import eon-js  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.location.href + "eon";
        // Inject js with meta
        /*<% template("../other/eon-bundle.js"); %>*/
        eon.theme = "claro";
        // UI components
        eon.import([
          "/eon/ui/eon-headerpanel",
          "/eon/ui/eon-showcase-item"
        ]);
      </script>
    </div>
    <!-- EXAMPLES BODY -->
    <div class="template-body">
      <eon-showcase-item title="Growing header">
        <eon-headerpanel id="d-coloured-panel" default-style="false" class="d-headerpanel" header="grow"
          action-button-class="d-white-action" header-class="d-headerpanel-header-white" header-content="Custom"
          action-button="changeSquaresColor('d-coloured-panel')" close-button="none" close-button-class="d-black-close">
          <div class="d-headerpanel-square red"></div>
          <div class="d-headerpanel-square red"></div>
          <div class="d-headerpanel-square red"></div>
          <div class="d-headerpanel-square red"></div>
        </eon-headerpanel>
      </eon-showcase-item>
      <eon-showcase-item title="Simple panel">
        <eon-headerpanel default-style="false" class="d-headerpanel">
        </eon-headerpanel>
      </eon-showcase-item>
    </div>
    <!-- END EXAMPLES BODY -->
    <script class="template-js">
      //** Showcase resize fix
      eon.onReady(function () {
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
      });
      //**
      var colors = ["", "#b78f47", "#2a9a9a", "#8c47b7", "#795829", "#b1616f", "#2b4b94"];

      function changeSquaresColor(id) {
        var squares = document.querySelector("#" + id).querySelectorAll(".d-headerpanel-square");
        var color = Math.floor((Math.random() * 6) + 1);
        // Change squares color
        for (var i = 0; i < squares.length; i++) {
          squares[i].style.backgroundColor = colors[color];
        }
      }

    </script>
    <style class="template-style">
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }

      /* Header panel custom style */
      .d-headerpanel {
        width: 200px;
        height: 200px;
        transition: all .2s;
      }

      .d-headerpanel-square {
        width: 100%;
        height: 100px;
        margin-top: 12px;
        background-color: rgb(59, 120, 183);
        transition: all .2s;
      }

      .d-headerpanel-header-white {
        background-color: #dedddd !important;
        color: #5d5d5d !important;
      }

      .d-white-action {
        background-color: white !important;
      }

      .d-black-close {
        color: #8c8c8c !important;
      }

      .d-black-close:hover {
        color: black !important;
      }

      .red {
        background-color: #b36a6a;
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>