<eon-anchor state="stack" eon-scroll=".containersPanel eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>STACK</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-stack" load="initializeShowcase('.d-stack-tmp', '.d-stack-pg');">
    <div name="example">
      <eon-showcase-item title="Stack sections">
        <div class="tExampleContainer d-stack-example">
          <div class="d-stack-menu">
            <div onclick='document.querySelector(".viewer-stack eon-stack").swapToPanelByIndex(0)'>
              Red Page
            </div>
            <div onclick='document.querySelector(".viewer-stack eon-stack").swapToPanelByIndex(1)'>
              Yellow Page
            </div>
            <div onclick='document.querySelector(".viewer-stack eon-stack").swapToPanel("blue")'>
              Blue Page
            </div>
          </div>

          <eon-stack class="d-stack">
            <eon-panel default-style="false" name="red" fit="true">
              <div class="d-panel-color red"></div>
            </eon-panel>
            <eon-panel default-style="false" name="yellow" class="d-panel-colors">
              <div class="d-panel-color yellow"></div>
            </eon-panel>
            <eon-panel default-style="false" name="blue" fit="true">
              <div class="d-panel-color blue"></div>
            </eon-panel>
          </eon-stack>
        </div>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-stack-pg"></eon-showcase>
    </div>
  </eon-viewer>
</div>