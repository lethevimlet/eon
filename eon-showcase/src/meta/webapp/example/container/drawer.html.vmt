<eon-anchor state="drawer" eon-scroll=".containersPanel eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>DRAWER</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-drawer" load="initializeShowcase('.d-drawer-tmp', '.d-drawer-pg');">
    <div name="example">
      <eon-showcase-item title="Left Drawer">
        <i id="d-drawer-lBtn" touch-action="none" class="vicon-menu d-drawer-btn eon-unselectable" onclick="slideInDrawer('drawer1')"></i>
        <eon-drawer id="drawer1" class="d-drawer eon-unselectable drawer" prevent-close-nodes="#d-drawer-lBtn" type="left">
          <div class="d-drawer-content">
            <div class="d-drawer-section">Menu</div>
            <span class="d-drawer-title"> MAIN PAGE</span>
            <span class="d-drawer-title"> PRODUCTS </span>
            <span class="d-drawer-title"> SERVICES </span>
            <span class="d-drawer-title"> CONTACT</span>
            <span class="d-drawer-title"> COMPANY </span>
          </div>
        </eon-drawer>
      </eon-showcase-item>
      <eon-showcase-item title="Top Drawer">
        <i id="d-drawer-tBtn" touch-action="none" class="vicon-menu d-drawer-btn eon-unselectable" onclick="slideInDrawer('drawer3')"></i>
        <eon-drawer id="drawer3" class="d-drawer eon-unselectable drawer" prevent-close-nodes="#d-drawer-tBtn" type="top">
          <div class="d-drawer-content">
            <div class="d-drawer-section">Menu</div>
            <span class="d-drawer-title"> MAIN PAGE</span>
            <span class="d-drawer-title"> PRODUCTS </span>
            <span class="d-drawer-title"> SERVICES </span>
            <span class="d-drawer-title"> CONTACT</span>
            <span class="d-drawer-title"> COMPANY </span>
          </div>
        </eon-drawer>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-drawer-pg"></eon-showcase>
    </div>
  </eon-viewer>

  <!-- Showcase content -->
  <template class="d-drawer-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <style>
        eon-showcase-item {
          height: 320px;
          width: 100%;
          overflow: hidden;
        }
      </style>
      <!-- Import eon-js  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.location.href + "eon";
        // Inject js with meta
        //<% template("../../util/eon-bundle.js");%>
        eon.theme = "claro";
        // UI components
        eon.import([
          "eon/ui/eon-drawer",
          "eon/custom/eon-showcase-item"
        ]);
      </script>
    </div>
    <!-- EXAMPLES BODY -->
    <div class="template-body">
      <eon-showcase-item title="Left Drawer">
        <i id="d-drawer-lBtn" touch-action="none" class="vicon-menu d-drawer-btn eon-unselectable" onclick="slideInDrawer('drawer1')"></i>
        <eon-drawer id="drawer1" class="d-drawer eon-unselectable drawer" prevent-close-nodes="#d-drawer-lBtn" type="left">
          <div class="d-drawer-content">
            <div class="d-drawer-section">Menu</div>
            <span class="d-drawer-title"> MAIN PAGE</span>
            <span class="d-drawer-title"> PRODUCTS </span>
            <span class="d-drawer-title"> SERVICES </span>
            <span class="d-drawer-title"> CONTACT</span>
            <span class="d-drawer-title"> COMPANY </span>
          </div>
        </eon-drawer>
      </eon-showcase-item>
      <eon-showcase-item title="Top Drawer">
        <i id="d-drawer-tBtn" touch-action="none" class="vicon-menu d-drawer-btn eon-unselectable" onclick="slideInDrawer('drawer3')"></i>
        <eon-drawer id="drawer3" class="d-drawer eon-unselectable drawer" prevent-close-nodes="#d-drawer-tBtn" type="top">
          <div class="d-drawer-content">
            <div class="d-drawer-section">Menu</div>
            <span class="d-drawer-title"> MAIN PAGE</span>
            <span class="d-drawer-title"> PRODUCTS </span>
            <span class="d-drawer-title"> SERVICES </span>
            <span class="d-drawer-title"> CONTACT</span>
            <span class="d-drawer-title"> COMPANY </span>
          </div>
        </eon-drawer>
      </eon-showcase-item>
    </div>
    <!-- END EXAMPLES BODY -->
    <script class="template-js">
      //** Showcase resize fix
      eon.onReady(function () {
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
      });
      //**
      function slideInDrawer(id) {
        var drawer = document.querySelector("#" + id);
        drawer.show();
      }
    </script>
    <style class="template-style">
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }

      /* Drawer element style */
      .d-drawer {
        display: flex;
        background-color: #dedddd;
        height: 250px;
      }

      .d-drawer[type=left] {
        top: 48px !important;
        height: calc(100% - 48px) !important;
      }

      .d-drawer[type=top] {
        top: 0 !important;
        left: 0;
      }

      /* Drawer content style */
      .d-drawer-content {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
      }

      .d-drawer-section {
        display: flex;
        align-items: center;
        margin: 0px 10px 0px 10px;
        font-size: 18px;
        height: 46px;
        font-weight: bold;
        justify-content: center;
        border-bottom: 2px solid #fdfdfd;
      }

      .d-drawer-title {
        margin: 5px 10px;
        color: #414141;
        text-align: center;
        padding: 6px 0;
        cursor: pointer;
        flex-grow: 1;
        font-weight: bold;
      }

      .d-drawer-title:hover {
        background-color: #d6d6d6;
      }

      /* Display drawer buttons style */
      .d-drawer-btn {
        cursor: pointer;
        font-size: 40px;
        position: absolute;
      }

      #d-drawer-lBtn {
        left: 0;
        margin-left: 11px;
      }

      #d-drawer-tBtn {
        top: 40px;
        left: calc(50% - 20px);
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>