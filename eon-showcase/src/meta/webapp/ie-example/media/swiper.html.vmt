<eon-anchor state="swiper" eon-scroll=".mediaPanel eon-scroll" type="top"></eon-anchor>
<div class="card first-card">
  <h1>SWIPER</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-swiper" load="initializeShowcase('.d-swiper-tmp', '.d-swiper-pg');">
    <div name="example">
      <eon-showcase-item title="Slides">
        <eon-swiper id="s1" class="d-swiper" pagination="true">
          <eon-slide class="blue"></eon-slide>
          <eon-slide class="red"></eon-slide>
          <eon-slide class="green"></eon-slide>
          <eon-slide class="yellow"></eon-slide>
        </eon-swiper>
      </eon-showcase-item>
      <eon-showcase-item title="Gallery">
        <eon-swiper id="s3" class="d-swiper" direction="horizontal" pagination="true" navigation="true" type="gallery"
          full-screen="true">
          <eon-slide image="img/view-5.jpeg"></eon-slide>
          <eon-slide image="img/view-2.jpeg"></eon-slide>
          <eon-slide image="img/view-6.jpeg"></eon-slide>
          <eon-slide image="img/view-4.jpeg"></eon-slide>
          <eon-slide image="img/view-1.jpeg"></eon-slide>
          <eon-slide image="img/view-5.jpeg"></eon-slide>
          <eon-slide image="img/view-2.jpeg"></eon-slide>
        </eon-swiper>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-swiper-pg"></eon-showcase>
    </div>
  </eon-viewer>
</div>