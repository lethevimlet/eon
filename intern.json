{
    "note": "JAVA must be on system $PATH - https://www.seleniumhq.org/download",
    "remoteUrl": "http://localhost:8081",
    "leaveRemoteOpen": false,
    "tunnelOptions": {
        "note": "Manually delete node_modules/@theintern/digdug/selenium-standalone to update",
        "drivers": [
            {
                "note": "https://chromedriver.storage.googleapis.com/index.html",
                "name": "chrome",
                "version": "2.37"
            },
            {
                "note": "https://github.com/mozilla/geckodriver/releases",
                "name": "firefox",
                "version": "0.20.0"
            },
            {
                "note": "https://developer.microsoft.com/en-us/microsoft-edge/tools/webdriver",
                "name": "edge",
                "version": "16299"
            },
            {
                "note": "Must match your ie arch 32/64 - http://selenium-release.storage.googleapis.com/index.html",
                "name": "ie",
                "arch": "32",
                "version": "3.9.0",
                "requireWindowFocus": true
            }
        ]
    },
    "browser": {
        "plugins": [
            "tests/example/browser-example.js"
        ]
    },
    "suites": [],
    "functionalSuites": [],
    "configs": {
        "all-browsers": {
            "environments": [
                {
                    "browserName": "chrome"
                },
                {
                    "browserName": "firefox"
                },
                {
                    "browserName": "MicrosoftEdge"
                },
                {
                    "browserName": "internet explorer",
                    "version": "11"
                }
            ]
        },
        "core-chrome": {
            "environments": [
                {
                    "browserName": "chrome",
                    "fixSessionCapabilities": "no-detect"
                }
            ],
            "functionalSuites": [
                "tests/functional/core/**/*.js"
            ]
        },
        "ui-chrome": {
            "environments": [
                {
                    "browserName": "chrome",
                    "fixSessionCapabilities": "no-detect"
                }
            ],
            "functionalSuites": [
                "tests/functional/ui/**/*.js"
            ]
        },
        "core": {
            "extends": ["all-browsers"],
            "functionalSuites": [
                "tests/functional/core/**/*.js"
            ]
        },
        "node": {
            "environments": [
                "node"
            ],
            "suites": [
                "tests/unit/node/**/*.js"
            ]
        }
    }
}