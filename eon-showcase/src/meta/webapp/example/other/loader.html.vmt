<eon-anchor state="loader" eon-scroll="eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>LOADER</h1>

  <!-- SHOWCASE -->
  <!-- Showcase declaration -->
  <eon-showcase class="d-pg d-loader-pg"></eon-showcase>

  <script>
    initializeShowcase(".d-loader-tmp", ".d-loader-pg");
  </script>

  <!-- Showcase content -->
  <template class="d-loader-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <style>
        eon-showcase-item {
          width: 100%;
        }
        </style>
      <!-- Import eon-js  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.location.href + "eon";
        // Inject js with meta
        /*<% template("../other/eon-bundle.js"); %>*/
        eon.theme = "claro";
        // UI components
        eon.import([
          "/eon/ui/eon-button",
          "/eon/ui/eon-loader",
          "/eon/ui/eon-showcase-item"
        ]);
      </script>
    </div>
    <!-- EXAMPLES BODY -->
    <div class="template-body">
      <eon-showcase-item title="Loader">
        <eon-loader theme="claro" id="d-l1" class="d-loader" duration="1000" effect="linear">
        </eon-loader>
        <div class="d-loader-btn-container">
          <eon-button value="Run page loader" onclick="runLoader()"></eon-button>
        </div>
      </eon-showcase-item>
      <eon-showcase-item title="Progress ease">
        <eon-loader id="d-l4" type="progress" effect="ease" bar-color="#b36a6a" class="d-loader d-progress"
          duration="1000">
        </eon-loader>
        <div class="d-loader-btn-container">
          <eon-button value="Run progress bar" onclick="runEaseProgress()"></eon-button>
        </div>
      </eon-showcase-item>
    </div>
    <!-- END EXAMPLES BODY -->
    <script class="template-js">
      eon.onReady(function () {
        //** Showcase resize fix
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
        //**
        runLoader();
        runEaseProgress()
      });
      
      function runLoader(l1) {
        var l1 = document.querySelector("#d-l1");
        l1.animate(0, 0);
        l1.animate(1);
      }

      function runEaseProgress() {
        var l4 = document.querySelector("#d-l4");
        l4.animate(0, 0);
        l4.animate(1, 2000);
      }
    </script>

    <style class="template-style">
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }
      
      /* Loader custom style */
      .d-loader {
        height: 5px !important;
        width: 100% !important;
      }

      .d-loader-btn-container {
        width: 100%;
        height: 100px;
        margin-right: auto;
        display: flex;
        justify-content: flex-end;
        align-items: flex-end;
      }

      .d-progress {
        position: relative;
        height: 15px !important;
        width: 100% !important;
        margin-right: auto;
      }

      .red {
        background-color: #b36a6a;
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>