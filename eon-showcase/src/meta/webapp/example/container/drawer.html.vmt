<eon-anchor state="drawer" eon-scroll="eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>DRAWER</h1>

  <!-- SHOWCASE -->
  <!-- Showcase declaration -->
  <eon-showcase class="d-pg d-drawer-pg"></eon-showcase>

  <script>
    initializeShowcase(".d-drawer-tmp", ".d-drawer-pg");
  </script>

  <!-- Showcase content -->
  <template class="d-drawer-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <style>
        eon-showcase-item {
          margin: 10px 4px 0px 0px;
        }
      </style>
      <!-- Import VimletJS  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.location.href + "eon";
        // Inject js with meta
        /*<% template("../other/eon.js"); %>*/

        // UI components
        eon.import([
          "/eon/ui/eon-drawer",
          "/eon/ui/eon-showcase-item"
        ]);
      </script>
    </div>
    <!-- EXAMPLES BODY -->
    <div class="template-body">

        <eon-showcase-item title="Login">
            <i id="d-drawer-lBtn" touch-action="none" class="vicon-menu d-drawer-btn eon-unselectable" onclick="slideInDrawer('drawer1')"></i>
            <eon-drawer id="drawer1" class="d-drawer eon-unselectable drawer" prevent-close-nodes="#d-drawer-lBtn" type="left">
              <div class="d-drawer-content">
                <div class="d-drawer-section">Menu</div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
              </div>
            </eon-drawer>
        </eon-showcase-item>

        <div class="row d-drawer-row">
          <div class="example d-drawer-example">
            <div class="tSubtitleContainer">
              <h2>Drawer</h2>
            </div>
            

            <i id="d-drawer-rBtn" touch-action="none" class="vicon-menu d-drawer-btn eon-unselectable" onclick="slideInDrawer('drawer2')"></i>
            <eon-drawer id="drawer2" class="d-drawer eon-unselectable drawer" type="right" prevent-close-nodes="#d-drawer-rBtn"
              type="left">
              <div class="d-drawer-content">
                <div class="d-drawer-section">Menu</div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
              </div>
            </eon-drawer>
          </div>
          <div class="example d-drawer-example">
            <div class="tSubtitleContainer">
              <h2>Vertical drawer</h2>
            </div>
            <i id="d-drawer-tBtn" touch-action="none" class="vicon-menu d-drawer-btn eon-unselectable" onclick="slideInDrawer('drawer3')"></i>
            <eon-drawer id="drawer3" class="d-drawer eon-unselectable drawer" prevent-close-nodes="#d-drawer-tBtn" type="top">
              <div class="d-drawer-content">
                <div class="d-drawer-section">Menu</div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child d-drawer-child-last">
                  <div></div>
                </div>
              </div>
            </eon-drawer>
            <i id="d-drawer-bBtn" touch-action="none" class="vicon-menu d-drawer-btn eon-unselectable" onclick="slideInDrawer('drawer4')"></i>
            <eon-drawer id="drawer4" class="d-drawer eon-unselectable drawer" prevent-close-nodes="#d-drawer-bBtn" type="bottom">
              <div class="d-drawer-content">
                <div class="d-drawer-section">Menu</div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child">
                  <div></div>
                </div>
                <div class="d-drawer-child d-drawer-child-last">
                  <div></div>
                </div>
              </div>
            </eon-drawer>
          </div>
        </div>
      <!-- END EXAMPLES BODY -->
    </div>
    <script class="template-js">
      //** Showcase resize fix
      eon.onReady(function () {
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
      });
      //**
      function slideInDrawer(id) {
        var drawer = document.querySelector("#" + id);
        drawer.show();
      }
    </script>
    <style class="template-style">
      .d-drawer {
        display: flex;
        background-color: #2d2d2d;
        height: 250px;
      }

      .d-drawer[type=left],
      .d-drawer[type=right] {
        top: 48px !important;
        height: calc(100% - 48px) !important;
        width: 230px;
      }

      .d-drawer[type=top] {
        top: 0 !important;
        left: 0;
      }

      .d-drawer[type=bottom] {
        top: auto !important;
        left: 0;
        height: 220px;
      }

      .d-drawer-example {
        position: relative;
        overflow: hidden;
        height: 300px;
      }

      .d-drawer-btn {
        cursor: pointer;
        font-size: 40px;
        position: absolute;
      }

      #d-drawer-lBtn {
        left: 0;
        margin-left: 11px;
      }

      #d-drawer-rBtn {
        right: 0;
        margin-right: 11px;
      }

      #d-drawer-tBtn {
        top: 40px;
        left: calc(50% - 20px);
      }

      #d-drawer-bBtn {
        top: auto !important;
        bottom: 0;
        left: calc(50% - 20px);
      }

      .d-drawer-content {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
      }

      .d-drawer-child {
        background-color: #606060;
        flex-grow: 1;
        margin: 6px;
        margin-left: 10px;
        margin-right: 10px;
        padding: 17px;
        display: flex;
      }

      .d-drawer-child-last {
        margin-bottom: 15px;
      }

      .d-drawer-section {
        display: flex;
        flex-grow: 1;
        align-items: center;
        margin: 15px 10px 6px 10px;
      }

      @media (min-width: 901px) {
        .d-drawer-example {
          min-width: 385px;
        }
      }

      @media (max-width: 900px) {
        .d-drawer-row {
          flex-direction: column;
        }
      }

      /* -- Shared cross-examples -- */
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>