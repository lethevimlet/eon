{
    "properties": {
        "firstName": {
            "type": "string",
            "pattern": "^hello",
            "errorMessage" : "Must start with \"hello\""
        },
        "lastName": {
            "type": "string",
            "required": true
        },
        "age": {
            "type": "integer",
            "minimum": 18,
            "maximum": 65,
            "errorMessage" : "The person must be at least 18 years old and younger than 65"
        },
        "datebox": {
            "type": "date",
            "format": "YYYY-MM-DD",
            "minimum": "2020-02-09"
        },
        "htmlCheckbox": {
            "type": "array",
            "minItems": 1,
            "errorMessage" : "Check at least one option"
        },
        "selectorTest1": {
            "type" : "string"
        },
        "sliderInput": {
            "type" : "integer",
            "minimum": 52
        },
        "person": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "pet": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "minLength": 6
                        }
                    }
                }
            }
        }
    },
    "required": [
        "selectorTest1"
    ]
}