<eon-anchor state="spinner" eon-scroll=".formsPanel eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>SPINNER</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-spinner" load="initializeShowcase('.d-spinner-tmp', '.d-spinner-pg');">
    <div name="example">
      <eon-showcase-item title="Spinner">
        <eon-spinner inline="true" label="Number spinner" value="15" min="9" max="111"></eon-spinner>
      </eon-showcase-item>
      <eon-showcase-item title="Disabled">
        <eon-spinner inline="true" disabled="true" label="Disabled spinner" value="10" min="9" max="111"></eon-spinner>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-spinner-pg"></eon-showcase>
    </div>
  </eon-viewer>
</div>