<eon-anchor state="sticky" eon-scroll=".menusPanel eon-scroll" type="top"></eon-anchor>
<eon-anchor state="menu" eon-scroll=".menusPanel eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>STICKY</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-sticky" load="initializeShowcase('.d-sticky-tmp', '.d-sticky-pg');">
    <div name="example">
      <eon-showcase-item>
        <!-- <eon-scroll class="sticky-scroll"> -->
          <!-- TOP STICKY -->
          <eon-sticky class="d-sticky-element" fix-container=".viewer-sticky">
            <div class="d-sticky-card">
              <h3>Top sticky</h3>
              <div class="d-sticky-inner-card"></div>
            </div>
          </eon-sticky>
          <div style="margin-top: 50px; height: 200px; width: 100%;" class="red"></div>
          <div style="margin-top: 50px; height: 200px; width: 100%;" class="green"></div>
          <div style="margin-top: 50px; height: 200px; width: 100%;" class="blue"></div>

          <eon-sticky side="bottom" class="d-sticky-element" fix-container=".viewer-sticky" wrapper-class="d-wrapper-class">
            <div class="d-sticky-card">
              <h3>Bottom sticky</h3>
              <div class="d-sticky-inner-card"></div>
            </div>
          </eon-sticky>
          <div style="margin-top: 50px; height: 200px; width: 100%;" class="purple"></div>
          <div style="margin-top: 50px; height: 200px; width: 100%;" class="blue"></div>
        <!-- </eon-scroll> -->
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-sticky-pg" style="height: 500px;"></eon-showcase>
    </div>
  </eon-viewer>

  <!-- Showcase content -->
  <template class="d-sticky-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <style>
        eon-showcase-item {
          height: 500px;
          width: 100%;
        }

        eon-showcase-item .eon-showcase-item-content {
          width: 100%;
          height: calc(100% - 33px);
          overflow: auto;
        }
      </style>
      <!-- Import eon-js  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.location.href + "eon";
        // Inject js with meta
        //<% template("../../util/eon-bundle.js");%>
        eon.theme = "claro";
        // UI components
        eon.import([
          "eon/ui/eon-sticky",
          "eon/custom/eon-showcase-item"
        ]);
      </script>
    </div>
    <!-- EXAMPLES BODY -->
    <div class="template-body">
      <eon-showcase-item>
        <eon-scroll>
          <!-- TOP STICKY -->
          <eon-sticky class="d-sticky-element" eon-scroll=".menusPanel eon-scroll">
            <div class="d-sticky-card">
              <h3>Top sticky</h3>
              <div class="d-sticky-inner-card"></div>
            </div>
          </eon-sticky>
          <div style="margin-top: 50px; height: 200px; width: 100%;" class="red"></div>
          <div style="margin-top: 50px; height: 200px; width: 100%;" class="green"></div>
          <div style="margin-top: 50px; height: 200px; width: 100%;" class="blue"></div>

          <eon-sticky side="bottom" class="d-sticky-element" eon-scroll=".menusPanel eon-scroll" wrapper-class="d-wrapper-class">
            <div class="d-sticky-card">
              <h3>Bottom sticky</h3>
              <div class="d-sticky-inner-card"></div>
            </div>
          </eon-sticky>
          <div style="margin-top: 50px; height: 200px; width: 100%;" class="purple"></div>
          <div style="margin-top: 50px; height: 200px; width: 100%;" class="blue"></div>
        </eon-scroll>
      </eon-showcase-item>
    </div>
    <!-- END EXAMPLES BODY -->
    <script class="template-js">
      //** Showcase resize fix
      eon.onReady(function () {
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
      });
      //** 
    </script>
    <style class="template-style">
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }

      /* Custom sticky style */
      .d-sticky-card {
        text-align: justify;
        margin: 0;
        width: 100%;
        height: auto;
        box-sizing: border-box;
        padding: 10px;
        background-color: #dedddd;
      }

      .d-sticky-card h3 {
        margin: 8px 0;
        font-size: 20px;
      }

      .d-sticky-inner-card {
        flex-grow: 1;
        height: 40px;
        min-width: 50px;
        margin: 8px;
        background: #bb9772;
      }

      .d-sticky-element {
        height: 110px;
        width: 100%;
        position: relative;
        text-align: center;
        font-size: 25px;
        color: #888888;
      }

      .blue {
        background-color: #7296bb !important;
      }

      .red {
        background-color: #b36a6a;
      }

      .green {
        background-color: #76bb72;
      }

      .purple {
        background-color: #bb7294;
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>