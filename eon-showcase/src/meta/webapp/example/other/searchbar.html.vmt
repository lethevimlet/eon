<eon-anchor state="searchbar" eon-scroll=".otherPanel eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>SEARCH BAR</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-searchbar" load="initializeShowcase('.d-searchbar-tmp', '.d-searchbar-pg');">
    <div name="example">
      <eon-showcase-item title="Search bar">
        <eon-searchbar class="d-searchbar onlyInput">
          <eon-text name="name" onkeyup='searchColor()'></eon-text>
        </eon-searchbar>

        <div class="d-searchbar-colors">
          <div value="Green" class="d-search-item-visible">Green</div>
          <div value="Red" class="d-search-item-visible">Red</div>
          <div value="Gray" class="d-search-item-visible">Gray</div>
          <div value="Pink" class="d-search-item-visible">Pink</div>
        </div>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-searchbar-pg"></eon-showcase>
    </div>
  </eon-viewer>

  <!-- Showcase content -->
  <template class="d-searchbar-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <style>
        eon-showcase-item {
          width: 100%;
        }

        eon-showcase-item .eon-showcase-item-content {
          display: flex;
          flex-direction: column;
          align-items: center;
        }
      </style>
      <!-- Import eon-js  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.parent.location.href + "eon";
        // Inject js with meta
        //<% template("../../util/eon-bundle.js");%>
        eon.theme = "claro";
        // UI components
        eon.import([
          "eon/ui/eon-text",
          "eon/ui/eon-date",
          "eon/ui/eon-searchbar",
          "eon/custom/eon-showcase-item"
        ]);
      </script>
    </div>
    <!-- EXAMPLES BODY -->
    <div class="template-body">
      <eon-showcase-item title="Search bar">
        <eon-searchbar class="d-searchbar onlyInput">
          <eon-text name="name" onkeyup='searchColor()'></eon-text>
        </eon-searchbar>

        <div class="d-searchbar-colors">
          <div value="Green" class="d-search-item-visible">Green</div>
          <div value="Red" class="d-search-item-visible">Red</div>
          <div value="Gray" class="d-search-item-visible">Gray</div>
          <div value="Pink" class="d-search-item-visible">Pink</div>
        </div>
      </eon-showcase-item>
    </div>
    <!-- END EXAMPLES BODY -->
    <script class="template-js">
      eon.onReady(function () {
        //** Showcase resize fix
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
        //**
        // On search event callback
        document.querySelector(".onlyInput").onSearch(function (filters) {
          var name = filters.name;
          // Get colors
          var toFilterChildren = document.querySelector(".d-searchbar-colors").children;
          // Show filtered colors
          for (var i = 0; i < toFilterChildren.length; i++) {
            if (toFilterChildren[i].getAttribute("value").toLowerCase().indexOf(name.toLowerCase()) > -1) {
              toFilterChildren[i].classList.add("d-search-item-visible");
            } else {
              toFilterChildren[i].classList.remove("d-search-item-visible");
            }
          }
        });
      });

      function searchColor() {
        var input = document.querySelector(".onlyInput");
        input.search(document.querySelector(".onlyInput"));
      }
    </script>
    <style class="template-style">
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }

      /* Search bar custom style */
      .d-searchbar {
        width: 300px;
      }

      .d-searchbar-colors {
        background-color: #f1fbff;
        margin-top: 10px;
        padding: 20px;
        color: #c1c1c1;
        height: 250px;
        width: 300px;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        box-sizing: border-box;
        align-items: center;
      }

      .d-searchbar-colors div {
        padding: 10px 10px;
        display: none;
      }

      .d-searchbar-colors .d-search-item-visible {
        display: flex;
      }

      @media (max-width: 426px) {

        .d-searchbar,
        .d-searchbar-colors {
          width: 100%;
        }
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>