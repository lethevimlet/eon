<eon-anchor state="drawer" eon-scroll=".containersPanel eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>DRAWER</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-drawer" load="initializeShowcase('.d-drawer-tmp', '.d-drawer-pg');">
    <div name="example">
      <eon-showcase-item title="Left Drawer">
        <i id="d-drawer-lBtn" touch-action="none" class="vicon-menu d-drawer-btn eon-unselectable" onclick="slideInDrawer('drawer1')"></i>
        <eon-drawer id="drawer1" class="d-drawer eon-unselectable drawer" prevent-close-nodes="#d-drawer-lBtn" type="left">
          <div class="d-drawer-content">
            <div class="d-drawer-section">Menu</div>
            <span class="d-drawer-title"> MAIN PAGE</span>
            <span class="d-drawer-title"> PRODUCTS </span>
            <span class="d-drawer-title"> SERVICES </span>
            <span class="d-drawer-title"> CONTACT</span>
            <span class="d-drawer-title"> COMPANY </span>
          </div>
        </eon-drawer>
      </eon-showcase-item>
      <eon-showcase-item title="Top Drawer">
        <i id="d-drawer-tBtn" touch-action="none" class="vicon-menu d-drawer-btn eon-unselectable" onclick="slideInDrawer('drawer3')"></i>
        <eon-drawer id="drawer3" class="d-drawer eon-unselectable drawer" prevent-close-nodes="#d-drawer-tBtn" type="top">
          <div class="d-drawer-content">
            <div class="d-drawer-section">Menu</div>
            <span class="d-drawer-title"> MAIN PAGE</span>
            <span class="d-drawer-title"> PRODUCTS </span>
            <span class="d-drawer-title"> SERVICES </span>
            <span class="d-drawer-title"> CONTACT</span>
            <span class="d-drawer-title"> COMPANY </span>
          </div>
        </eon-drawer>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-drawer-pg"></eon-showcase>
    </div>
  </eon-viewer>
</div>