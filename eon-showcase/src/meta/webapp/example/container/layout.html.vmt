<eon-anchor state="layout" eon-scroll=".containersPanel eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>LAYOUT</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-layout" load="initializeShowcase('.d-layout-tmp', '.d-layout-pg');">
    <div name="example">
      <eon-showcase-item title="Flex behavior">
        <eon-layout type="column" class="d-layout-main scrollableContainer">
          <eon-layout class="d-layout-childContainer headerFlex">
            <div class="d-layout-child" style="margin-right: 0;"></div>
            <div class="d-layout-child"></div>
          </eon-layout>
          <div class="d-layout-child" style="margin-top: 0;"></div>
        </eon-layout>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-layout-pg"></eon-showcase>
    </div>
  </eon-viewer>

  <!-- Showcase content -->
  <template class="d-layout-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <style>
        @media (max-width: 430px) {
          eon-showcase-item {
            width: 100%;
          }
        }
      </style>
      <!-- Import eon-js  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.parent.location.href + "eon";
        // Inject js with meta
        //<% template("../../util/eon-bundle.js");%>
        eon.theme = "claro";
        // UI components
        eon.import([
          "eon/ui/eon-layout",
          "eon/custom/eon-showcase-item"
        ]);
      </script>
    </div>
    <!-- EXAMPLES BODY -->
    <div class="template-body">
      <eon-showcase-item title="Flex behavior">
        <eon-layout type="column" class="d-layout-main scrollableContainer">
          <eon-layout class="d-layout-childContainer headerFlex">
            <div class="d-layout-child" style="margin-right: 0;"></div>
            <div class="d-layout-child"></div>
          </eon-layout>
          <div class="d-layout-child" style="margin-top: 0;"></div>
        </eon-layout>
      </eon-showcase-item>
    </div>
    <!-- END EXAMPLES BODY -->
    <script class="template-js">
      //** Showcase resize fix
      eon.onReady(function () {
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
      });
      //**
    </script>
    <style class="template-style">
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }

      /* Layout custom style */
      .d-layout-main {
        max-width: 300px;
        min-width: 180px;
        margin-top: 10px;
        margin-bottom: 10px;
      }

      .d-layout-childContainer {
        overflow-y: hidden;
        width: 300px;
      }

      .d-layout-child {
        height: 120px;
        background-color: #7296bb;
        box-sizing: border-box;
        flex-grow: 1;
        margin: 10px;
        -webkit-box-shadow: 0px 0px 10px #d8d8d8;
        -moz-box-shadow: 0px 0px 10px #d8d8d8;
        box-shadow: 0px 0px 10px #d8d8d8;
      }

      @media (max-width: 430px) {

        .d-layout-main,
        .d-layout-childContainer {
          width: 100%;
          max-width: 100%;
        }
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>