<eon-anchor state="swiper" eon-scroll=".mediaPanel eon-scroll" type="top"></eon-anchor>
<div class="card first-card">
  <h1>SWIPER</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-swiper" load="initializeShowcase('.d-swiper-tmp', '.d-swiper-pg');">
    <div name="example">
      <eon-showcase-item title="Slides">
        <eon-swiper id="s1" class="d-swiper" pagination="true">
          <eon-slide class="blue"></eon-slide>
          <eon-slide class="red"></eon-slide>
          <eon-slide class="green"></eon-slide>
          <eon-slide class="yellow"></eon-slide>
        </eon-swiper>
      </eon-showcase-item>
      <eon-showcase-item title="Gallery">
        <eon-swiper id="s3" class="d-swiper" direction="horizontal" pagination="true" navigation="true" type="gallery"
          full-screen="true">
          <eon-slide image="img/view-5.jpeg"></eon-slide>
          <eon-slide image="img/view-2.jpeg"></eon-slide>
          <eon-slide image="img/view-6.jpeg"></eon-slide>
          <eon-slide image="img/view-4.jpeg"></eon-slide>
          <eon-slide image="img/view-1.jpeg"></eon-slide>
          <eon-slide image="img/view-5.jpeg"></eon-slide>
          <eon-slide image="img/view-2.jpeg"></eon-slide>
        </eon-swiper>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-swiper-pg"></eon-showcase>
    </div>
  </eon-viewer>

  <!-- Showcase content -->
  <template class="d-swiper-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <style>
        eon-showcase-item .eon-showcase-item-content{
          width: 450px;
          height: 350px;
        }
        @media (max-width: 630px) {
          eon-showcase-item,
          eon-showcase-item .eon-showcase-item-content{
            width: 100%
          }
        }
        @media (max-width: 480px) {
          eon-showcase-item .eon-showcase-item-content{
            height: 200px;
          }
        }
      </style>
      <!-- Import eon-js  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.location.href + "eon";
        // Inject js with meta
        //<% template("../../util/eon-bundle.js");%>
        eon.theme = "claro";
        // UI components
        eon.import([
          "eon/ui/eon-swiper",
          "eon/custom/eon-showcase-item"
        ]);
      </script>
    </div>
    <!-- EXAMPLES BODY -->
    <div class="template-body">
      <eon-showcase-item title="Slides">
        <eon-swiper id="s1" class="d-swiper" pagination="true">
          <eon-slide class="blue"></eon-slide>
          <eon-slide class="red"></eon-slide>
          <eon-slide class="green"></eon-slide>
          <eon-slide class="yellow"></eon-slide>
        </eon-swiper>
      </eon-showcase-item>
      <eon-showcase-item title="Gallery">
        <eon-swiper id="s3" class="d-swiper" direction="horizontal" pagination="true" navigation="true" type="gallery"
          full-screen="true">
          <eon-slide image="img/view-5.jpeg"></eon-slide>
          <eon-slide image="img/view-2.jpeg"></eon-slide>
          <eon-slide image="img/view-6.jpeg"></eon-slide>
          <eon-slide image="img/view-4.jpeg"></eon-slide>
          <eon-slide image="img/view-1.jpeg"></eon-slide>
          <eon-slide image="img/view-5.jpeg"></eon-slide>
          <eon-slide image="img/view-2.jpeg"></eon-slide>
        </eon-swiper>
      </eon-showcase-item>
    </div>
    <!-- END EXAMPLES BODY -->
    <script class="template-js">
      //** Showcase resize fix
      eon.onReady(function () {
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
      });
      //**
    </script>

    <style class="template-style">
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }

      /* Swiper custom style */
      .d-swiper {
        height: 100% !important;
        -webkit-box-shadow: 0px 0px 10px #d8d8d8;
        -moz-box-shadow: 0px 0px 10px #d8d8d8;
        box-shadow: 0px 0px 10px #d8d8d8;
      }

      .blue {
        background-color: #7296bb !important;
      }

      .yellow {
        background-color: #bb9772;
      }

      .green {
        background-color: #76bb72 !important;
      }

      .red {
        background-color: #b36a6a;
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>