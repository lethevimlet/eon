<eon-anchor state="loadingmask" eon-scroll=".otherPanel eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>LOADING MASK</h1>

  <!-- SHOWCASE -->
  <eon-viewer load="initializeShowcase('.d-loadingmask-tmp', '.d-loadingmask-pg');">
    <div name="example">
      <eon-showcase-item title="Full screen">
        <eon-button class="d-loadingmask-btn" value="Show loading mask" onclick="showComplete();"></eon-button>
        <eon-loadingmask id="complete" display="false"></eon-loadingmask>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-loadingmask-pg"></eon-showcase>
    </div>
  </eon-viewer>
</div>