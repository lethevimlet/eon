{
  "remoteUrl": "http://localhost:3000",

  "node": {
    "suites": ["eon-core/tests/unit/node/**/*.js"]
  },

  "functionalSuites": [
    "eon-core/tests/functional/browser/**/*.js"
  ],

  "configs": {

    "node": {
      "environments": ["node"]
    },

    "browser": {
      "plugins": ["eon-core/tests/intern-plugin.js"],
      "environments": ["chrome"]
    },

    "cloud": {
      "plugins": ["eon-core/tests/intern-plugin.js"],
      "tunnel": "testingbot",
      "environments": [{ "browserName": "chrome", "version": "72", "platform": "WIN10" }]
    },

    "performance": {
      "plugins": ["eon-core/tests/intern-plugin.js"],
      "environments": [{ "browserName": "chrome", "fixSessionCapabilities": false }],
      "leaveRemoteOpen": true
    }

  }
}