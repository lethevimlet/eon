<eon-anchor state="gutter" eon-scroll="eon-scroll" type="top"></eon-anchor>
<div class="card">
  <h1>GUTTER</h1>

  <!-- SHOWCASE -->
  <eon-viewer class="viewer-gutter" load="initializeShowcase('.d-gutter-tmp', '.d-gutter-pg');">
    <div name="example">
      <eon-showcase-item title="Gutter">
        <eon-gutter theme="claro" class="d-gutter-root" type="vertical" collapsible="true">
          <eon-section>
            <eon-gutter theme="claro" class="d-gutter" collapsible="false">
              <eon-section class="section">
                <div class="d-gutter-inner d-gutter-blue"></div>
                <div class="d-gutter-inner d-gutter-blue"></div>
                <div class="d-gutter-inner d-gutter-blue"></div>
                <div class="d-gutter-inner d-gutter-blue"></div>
              </eon-section>
              <eon-section>
                <div class="d-gutter-inner d-gutter-orange"></div>
                <div class="d-gutter-inner d-gutter-orange"></div>
                <div class="d-gutter-inner d-gutter-orange"></div>
                <div class="d-gutter-inner d-gutter-orange"></div>
              </eon-section>
            </eon-gutter>
          </eon-section>
          <eon-section>
            <div class="d-gutter-inner d-gutter-red"></div>
            <div class="d-gutter-inner d-gutter-red"></div>
            <div class="d-gutter-inner d-gutter-red"></div>
            <div class="d-gutter-inner d-gutter-red"></div>
          </eon-section>
        </eon-gutter>
      </eon-showcase-item>
    </div>
    <div name="showcase">
      <!-- Showcase declaration -->
      <eon-showcase class="d-pg d-gutter-pg"></eon-showcase>
    </div>
  </eon-viewer>

  <!-- Showcase content -->
  <template class="d-gutter-tmp">
    <div class="template-head">
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <style>
        eon-showcase-item {
          width: 100%;
          height: 300px;
        }
        eon-showcase-item .eon-showcase-item-content{
          height: calc(300px - 73px);
        }
      </style>
      <!-- Import eon-js  -->
      <script>
        // ** Eon polyfill path fix
        document.currentScript.src = window.location.href + "eon";
        // Inject js with meta
        //<% template("../../util/eon-bundle.js");%>
        eon.theme = "claro";
        // UI components
        eon.import([
          "eon/ui/eon-gutter",
          "eon/custom/eon-showcase-item"
        ]);
      </script>
    </div>
    <!--EXAMPLES BODY-->
    <div class="template-body">
      <eon-showcase-item title="Gutter">
        <eon-gutter theme="claro" class="d-gutter-root" type="vertical" collapsible="true">
          <eon-section>
            <eon-gutter theme="claro" class="d-gutter" collapsible="false">
              <eon-section class="section">
                <div class="d-gutter-inner d-gutter-blue"></div>
                <div class="d-gutter-inner d-gutter-blue"></div>
                <div class="d-gutter-inner d-gutter-blue"></div>
                <div class="d-gutter-inner d-gutter-blue"></div>
              </eon-section>
              <eon-section>
                <div class="d-gutter-inner d-gutter-orange"></div>
                <div class="d-gutter-inner d-gutter-orange"></div>
                <div class="d-gutter-inner d-gutter-orange"></div>
                <div class="d-gutter-inner d-gutter-orange"></div>
              </eon-section>
            </eon-gutter>
          </eon-section>
          <eon-section>
            <div class="d-gutter-inner d-gutter-red"></div>
            <div class="d-gutter-inner d-gutter-red"></div>
            <div class="d-gutter-inner d-gutter-red"></div>
            <div class="d-gutter-inner d-gutter-red"></div>
          </eon-section>
        </eon-gutter>
      </eon-showcase-item>
    </div>
    <!-- END EXAMPLES BODY -->
    <script class="template-js">
      //** Showcase resize fix
      eon.onReady(function () {
        // Iframe content loaded monitoring
        eon.triggerCallback("onLoaded", window.frameElement);
      });
            //**
    </script>
    <style class="template-style">
      html,
      body {
        height: auto;
        width: 100%;
        padding: 0;
        margin: 0;
        background-color: transparent;
        color: #888888;
        overflow: hidden;
      }

      /* Gutter sections custom style */
      .d-gutter .eon-gutter-section,
      .d-gutter-root .eon-gutter-section {
        background-color: #dedddd;
      }

      .d-gutter-inner {
        height: 50px;
        width: 50px;
        min-width: 50px;
        margin: 8px;
        background: #76bb72;
      }

      .d-gutter-blue {
        background-color: #7296bb;
      }

      .d-gutter-orange {
        background-color: #bb9772;
      }
    </style>
  </template>
  <!-- END SHOWCASE -->
</div>