{
  "name": "vcomet",
  "version": "0.9.9",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@vimlet/commons": "2.6.0",
    "autoless": "0.1.7",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "less": "2.7.3",
    "minify": "3.0.5",
    "clean-css": "4.1.11",
    "sync": "0.2.5",
    "rimraf": "2.6.2",
    "eslint": "4.19.1"
  },
  "optionalDependencies": {
    "@vimlet/alpha": "0.4.32"
  },
  "scripts": {
    "install:server": "cd ./src/server && npm i",
    "postinstall": "run-s install:server",
    "format:js": "alpha format-js -i src/**/*.js",
    "format:html": "alpha format-html -i src/**/*.html",
    "format:css": "alpha format-css -i src/**/*.css",
    "format": "run-s format:js format:html format:css",
    "test": "alpha test",
    "test:core": "alpha test config=intern.json@core",
    "doc:api": "alpha doc api",
    "doc:article": "alpha doc article",
    "doc:main": "alpha doc main",
    "doc": "alpha doc",
    "readme": "alpha readme",
    "readme:html": "alpha readme h",
    "readme:centered": "alpha readme c",
    "meta": "alpha meta -i src/main/meta/**/*.vmt -o src/main",
    "server": "node src/server",
    "less": "node src/scripts/lessc.js src/main/less/**/*.less src/main",
    "less:watch": "node_modules/.bin/autoless src/main/less ../src/main",
    "pack": "node src/scripts/pack.js",
    "release": "alpha release --draft"
  }
}
